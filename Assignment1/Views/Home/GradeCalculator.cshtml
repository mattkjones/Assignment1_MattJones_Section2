@{
    ViewBag.Header = "Calculate Your Grade!";
}

@model Assignment1.Models.GradeCalculatorModel

<!--Grade Calculator (HTML portion)-->
<body>
    <p class="grader">Grade Calculator</p>
    <form method="post">
        <!--50%-->
        <label>Assignments</label>
        <input id="assign" asp-for="assign"/>
        <br />
        <!--10%-->
        <label>Group Project</label>
        <input id="group" asp-for="group"/>
        <br />
        <!--10%-->
        <label>Quizzes</label>
        <input id="quiz" asp-for="quiz"/>
        <br />
        <!--20%-->
        <label>Exams</label>
        <input id="exam" asp-for="exam"/>
        <br />
        <!--10%-->
        <label>INTEX</label>
        <input id="INTEX" asp-for="INTEX"/>
        <br />
        <input class="calcbutton" type="submit" value="Calculate" id="submitbutton" />
        <!--Shows error messages if requirements are not met-->
        <div asp-validation-summary="All"></div>
    </form>
</body>